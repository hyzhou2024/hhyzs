.flex_column {
    display: flex;
    flex-direction: column;
}

.line {
    background: rgba(139,143,163,.2);
    height: .5px;
    margin: 0 auto;
    width: 85vw;
}

.flex_row {
    display: flex;
    flex-direction: row;
}

.issue_date_container {
    align-items: baseline;
    margin-left: 15rpx;
}

.issue {
    color: #1c1717;
    font-size: 36rpx;
}

.ballList {
    margin-bottom: 10rpx;
    margin-top: 10rpx;
}

.prize_date {
    color: #909090;
    font-size: 24rpx;
    margin-left: 10rpx;
}

.ballBg {
    height: 50rpx;
    top: 50%;
}

.ballBg,.shadow {
    left: 50%;
    position: absolute;
    transform: translate(-50%,-50%);
    width: 50rpx;
}

.shadow {
    height: 10rpx;
    top: 65rpx;
}

.ballContainer {
    height: 75rpx;
    width: 10%;
}

.issue_container {
    padding: 10rpx;
    position: relative;
}

.top-arrow {
    height: 36rpx;
    right: 20rpx;
    top: 50%;
    transform: translate(0,-50%);
    width: 36rpx;
}

.top-arrow,.top-arrow::after {
    display: inline-block;
    position: absolute;
}

.top-arrow::after {
    border-color: #c7c7cc;
    border-style: solid;
    border-width: 4rpx 4rpx 0 0;
    content: " ";
    height: 18rpx;
    transform: rotate(315deg);
    width: 18rpx;
}

.bottom-arrow {
    height: 36rpx;
    right: 20rpx;
    top: 50%;
    transform: translate(0,-50%);
    width: 36rpx;
}

.bottom-arrow,.bottom-arrow::after {
    display: inline-block;
    position: absolute;
}

.bottom-arrow::after {
    border-color: #c7c7cc;
    border-style: solid;
    border-width: 4rpx 4rpx 0 0;
    content: " ";
    height: 18rpx;
    transform: rotate(135deg);
    width: 18rpx;
}

.sales_pool_container {
    color: #1c1717;
    padding: 8px 0 24px;
}

.pool_container,.sales_pool_container {
    align-items: center;
}

.pool_container {
    flex: 1;
}

.line_v {
    background: rgba(61,68,102,.2);
    height: 100rpx;
    width: 2rpx;
}

.pool_desc {
    color: #444;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    height: 22px;
    letter-spacing: 0;
    line-height: 22px;
    margin-top: 2px;
    opacity: .4;
    text-align: center;
}

.pool_money {
    color: #333;
    font-family: Akrobat-ExtraBold;
    font-size: 45rpx;
    height: 28px;
    line-height: 28px;
}

.pool_money,.prize_detail {
    font-weight: 700;
    letter-spacing: 0;
    text-align: center;
}

.prize_detail,.prize_detail_title {
    color: rgba(51,51,51,.8);
    font-size: 14px;
    height: 22px;
    line-height: 22px;
}

.prize_detail_title {
    font-family: PingFangSC-Medium;
    font-weight: 700;
    letter-spacing: 0;
}

.prize_grade {
    padding: 30rpx 20rpx;
}

.prize_grade_container {
    background: #f9f9fb;
    border-radius: 0 0 5vw 5vw;
    font-family: Akrobat-Black;
}

.box {
    background: #fff;
    border-radius: 5vw;
    margin: 12px auto 0;
    padding-top: 30rpx;
    position: relative;
    width: 90vw;
}

.issue_container {
    align-items: baseline;
    font-family: Akrobat-Black;
    padding-left: 30rpx;
}

.issue_container .issue {
    font-size: 18px;
}

.issue_container .date,.issue_container .issue {
    color: #333;
    font-family: Akrobat-ExtraBold;
    font-weight: 700;
    height: 24px;
    letter-spacing: 0;
    line-height: 24px;
}

.issue_container .date {
    font-size: 14px;
    margin-left: 8px;
    opacity: .4;
}

.issue_container .week {
    color: #333;
    font-family: PingFangSC-Semibold;
    font-size: 12px;
    font-weight: 700;
    height: 24px;
    letter-spacing: 0;
    line-height: 24px;
    opacity: .4;
}

.lottery_balls {
    margin: 20rpx;
    min-height: 100rpx;
}

.ballContainer {
    height: 60rpx;
    margin: 5rpx;
    position: relative;
    width: 60rpx;
}

.red_ball {
    background: linear-gradient(315deg,#ff6a4f,#ef1c2d);
    border-radius: 60rpx;
}

.blue_ball {
    background: linear-gradient(315deg,#4a68fd,#394dcc);
    border-radius: 60rpx;
}

.ballDesc {
    font-size: 40rpx;
}

.ticket_line {
    align-items: center;
    padding-bottom: 40rpx;
    position: relative;
}

.line_dotte {
    border-bottom: 4rpx dashed #edeef1;
    width: 100%;
}

.right_semicircle {
    left: -20rpx;
}

.left_semicircle,.right_semicircle {
    background: #edeef1;
    border-radius: 40rpx;
    height: 40rpx;
    position: absolute;
    width: 40rpx;
}

.left_semicircle {
    right: -20rpx;
}

.prize_top_arrow {
    transform: translate(0,-50%) rotate(180deg);
}

.prize_bottom_arrow,.prize_top_arrow {
    height: 60rpx;
    position: absolute;
    right: 40rpx;
    top: 50%;
    width: 60rpx;
}

.prize_bottom_arrow {
    transform: translate(0,-50%);
}

.title_level {
    flex: 1;
    text-align: center;
}

.title_num {
    flex: 2;
}

.title_account,.title_num {
    font-family: Akrobat-ExtraBold;
    text-align: center;
}

.title_account {
    flex: 1;
}

.ball_bg {
    border-radius: 80%;
    height: 0;
    left: 50%;
    padding-bottom: 80%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 80%;
}

.ball_bg_red,.red_ball_kl8 {
    background: linear-gradient(315deg,#ff6a4f,#ef1c2d);
}

.red_ball_kl8 {
    border-radius: 40rpx;
}

.lottery_balls_kl8 {
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-around;
    min-height: 70rpx;
    padding: 10px;
}

.ballDesc {
    color: #fff;
    font-family: Akrobat-Black;
    font-size: 36rpx;
    font-weight: 700;
    left: 50%;
    position: absolute;
    text-align: center;
    top: 50%;
    transform: translate(-50%,-50%);
}

.ballContainer_kl8 {
    padding-bottom: 10%;
    position: relative;
    width: 10%;
}

.ballDesc_kl8 {
    color: #fff;
    font-family: Akrobat-Black;
    font-size: 30rpx;
    left: 50%;
    position: absolute;
    text-align: center;
    top: 50%;
    transform: translate(-50%,-50%);
}

.type_container {
    align-items: center;
    display: flex;
    overflow-x: scroll;
    white-space: nowrap;
}

.type_container::-webkit-scrollbar {
    display: none;
}

.type_right_overlay {
    background-image: linear-gradient(90deg,hsla(0,0%,100%,0),#fff);
    height: 30px;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translate(0,-50%);
    width: 31px;
    z-index: 999;
}

.type_content {
    color: #333;
    opacity: .4;
}

.type_content,.type_content_selected {
    font-family: PingFangSC-Medium;
    font-size: 14px;
    height: 22px;
    letter-spacing: 0;
    line-height: 22px;
    padding: 10rpx 30rpx;
    text-align: center;
    width: 200rpx;
}

.type_content_selected {
    color: #5c6499;
}

.line_v_choice {
    border-left: 1px solid #3d4466;
    height: 10px;
    opacity: .2;
}

.structure_line {
    height: 40rpx;
    width: 100%;
}