/* pages/selnumber/selnumber.wxss */
page{
    font-size: 32rpx;
    font-family: PingFangSC-Regular,'Helvetica Neue',Helvetica,Arial,Sans-serif;
  }

  
  .exp {
    padding: 10rpx 0 10rpx 20rpx;
  }
  .exp text:nth-child(1){
    color: #f00;
  }
  .exp text:nth-child(2){
    color: #1a86e1;
  }
  .box {
    width: 98%;
    display: flex;
    flex-wrap: wrap;
    border: 1rpx solid #011d44;
    padding: 2rpx;
    margin: 0 auto;
  }
  
  .ritem {
    box-sizing: border-box;
    width: 10%;
    line-height: 28px;
    text-align: center;
  }
  
  .ritem .redval {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    border: 1px solid #ccc;
    border-radius: 50%;
    background-color: #fff;
    color: #ff3741;
  }
  
  .redval.is_checked {
    font-size: 34rpx;
    background: #ff3741;
    color: #fff;
    animation: change 0.2s ease;
  }
  
  .bitem {
    box-sizing: border-box;
    width: 10%;
    line-height: 28px;
    text-align: center;
  }
  
  .bitem .blueval {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    border: 1px solid #ccc;
    border-radius: 50%;
    background-color: #fff;
    color: #1a86e1;
  }
  
  .blueval.is_checked {
    font-size: 34rpx;
    background: #1a86e1;
    color: #fff;
    animation: change 0.2s ease;
  }
  
  @keyframes change {
    0% {
      transform: scale(1, 1);
    }
  
    50% {
      transform: scale(1.2, 1.2);
    }
  
    100% {
      transform: scale(1, 1);
    }
  }
  
  .btn {
    width: 100%;
    height: 2rem;
    display: flex;
   
    left: 0;
    bottom: 5%;
    margin: 0 5%;
  }
  
  .btn text {
    width: 30%;
    height: 2rem;
    line-height: 2rem;
    text-align: center;
    border-radius: 12rpx;
    background: #169BD5;
    color: #fff;
  }
  
  .btn text:nth-child(1) {
    margin-right: 30%;
  }
.calculate {
    align-items: center;
    display: flex;
    font-size: 36rpx;
    justify-content: center;
    margin: 10rpx auto 0;
    width: 98%;
}

.float {
    color: tomato;
