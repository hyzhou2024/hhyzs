<!-- 搜索栏 -->
<import src="../../templates/nodata" />
<view class='box' wx:if="{{!config.showCheck}}">
  <form bindsubmit='bindconfirm'>
    <view class="cu-bar search bg-white">
      <view class='search-form round'>
        <text class="cuIcon-search"></text>
        <input type="text" placeholder="搜索感兴趣的表情" value="{{defaultSearchValue}}" bindconfirm="bindconfirm" name="searchContent" confirm-type="search"></input>
      </view>
    </view>
  </form>
  <scroll-view scroll-x class="bg-white nav solid-bottom">
    <view class="flex text-center">
      <view wx:for="{{navItems}}" wx:key="index" wx:for-index="idx" data-data="{{item}}" class="cu-item flex-sub {{item.index==tabCur?'text-green cur':''}}" bindtap='tabSelect' data-id="{{item.index}}">
        {{item.name}}
      </view>
    </view>
  </scroll-view>
  <scroll-view wx:if="{{showHot}}" scroll-x class="bg-white nav solids-bottom">
    <view class="padding bg-white">
      <view wx:for="{{hotItems}}" wx:for-index="idx" wx:key = "index"data-data="{{item}}" class="cu-tag round lg {{idx==hotCur?'bg-blue':''}}" bindtap='hotSelect' data-id="{{idx}}">
        {{item}}
      </view>
    </view>
  </scroll-view>
  <scroll-view wx:if="{{showLabels}}" scroll-x class="bg-white nav solids-bottom">
    <view class="padding bg-white">
      <view class="cu-tag round lg {{'全部'==labelCur?'bg-blue':''}}" data-id="全部" bindtap='labelSelect'>全部</view>
      <view wx:for="{{labelList}}" wx:key="idx" wx:for-index="idx" wx:for-item="item" class="cu-tag round lg {{item.value==labelCur?'bg-blue':''}}" bindtap='labelSelect' data-id="{{item.value}}">
        {{item.value}}
      </view>
    </view>
  </scroll-view>
</view>
<!-- 文章列表 -->
<view class="pic_list" wx:if="{{!config.showCheck}}">
  <view wx:for="{{posts}}" wx:key="idx" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}" id="{{item._id}}" bindtap="bindPostDetail" class="pic_ritem">
   
    <image src="{{item.defaultImageUrl}}"  mode="widthFix" data-id="{{item}}" ></image>
   
    <view class='text-gray text-sm  padding'>
     
      <text class="cuIcon-attentionfill" />
      {{item.totalVisits}}
      <text class="cuIcon-appreciatefill" />
      {{item.totalZans}}
      <text class="cuIcon-messagefill" />
      {{item.totalComments}}
    </view>
  </view>
</view>
<!-- 数据不存在 -->
<view wx:if="{{nodata}}">
  <template is="nodata" />
</view>
