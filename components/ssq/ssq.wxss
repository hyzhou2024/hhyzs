/* 双色球开奖组件 - 动态酷炫样式 */
:root {
    --primary-color: #011d44;
    --primary-light: #0a2a5c;
    --primary-dark: #00122e;
    --primary-gradient: linear-gradient(135deg, #011d44 0%, #0a2a5c 100%);
    --accent-color: #3a86ff;
    --accent-light: #5a9cff;
    --red-gradient: linear-gradient(135deg, #ff0000 0%, #ff6b6b 100%);
    --blue-gradient: linear-gradient(135deg, #4cc9f0 0%, #4361ee 100%);
    --gold-gradient: linear-gradient(135deg, #ffd700 0%, #ff9e00 100%);
    --neon-red: #ff073a;
    --neon-blue: #00f5ff;
    --neon-glow: 0 0 20px currentColor;
  }
  
  /* 全局动画 */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes glow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  /* 主容器 */
  .lottery-container {
    padding: 30rpx;
    background: linear-gradient(135deg, #0a1929 0%, #1a365d 100%);
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }
  
  /* 星空背景效果 */
  .lottery-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(white, rgba(255,255,255,.2) 2px, transparent 4px),
      radial-gradient(white, rgba(255,255,255,.15) 1px, transparent 3px);
    background-size: 100px 100px, 50px 50px;
    background-position: 0 0, 25px 25px;
    animation: stars 100s linear infinite;
    opacity: 0.3;
  }
  
  @keyframes stars {
    from { background-position: 0 0, 25px 25px; }
    to { background-position: 1000px 1000px, 1025px 1025px; }
  }
  
  /* 开奖卡片 - 赛博朋克风格 */
  .lottery-card {
    background: rgba(1, 29, 68, 0.1);
    backdrop-filter: blur(20px);
    border-radius: 25rpx;
    padding: 40rpx 30rpx;
    position: relative;
    border: 2px solid transparent;
    background-clip: padding-box;
    margin-bottom: 30rpx;
    animation: float 6s ease-in-out infinite;
  }
  
  /* 霓虹边框 */
  .lottery-card::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, 
      var(--neon-red), 
      var(--neon-blue), 
      #ff00ff, 
      var(--neon-red));
    border-radius: 27rpx;
    z-index: -1;
    animation: spin 3s linear infinite;
    background-size: 400% 400%;
  }
  
  .lottery-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, 
      rgba(255, 7, 58, 0.1), 
      rgba(0, 245, 255, 0.1));
    border-radius: 25rpx;
    z-index: -1;
  }
  
  /* 头部信息 */
  .lottery-header {
    margin-bottom: 40rpx;
    text-align: center;
    position: relative;
  }
  
  .issue-info {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15rpx;
  }
  
  .issue-text {
    font-size: 28rpx;
    color: #a0aec0;
    font-weight: 300;
    text-shadow: 0 0 10px rgba(160, 174, 192, 0.5);
  }
  
  .issue-number {
    font-size: 42rpx;
    font-weight: 700;
    background: linear-gradient(45deg, #ffd700, #ff6b00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 10rpx;
    text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
    animation: pulse 2s ease-in-out infinite;
  }
  
  .status-badge {
    background: linear-gradient(45deg, var(--neon-red), var(--neon-blue));
    color: white;
    padding: 12rpx 25rpx;
    border-radius: 25rpx;
    font-size: 24rpx;
    font-weight: 600;
    margin-left: 20rpx;
    position: relative;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(255, 7, 58, 0.5);
    animation: shake 0.5s ease-in-out infinite;
  }
  
  .status-badge.drawing {
    animation: shake 0.3s ease-in-out infinite;
  }
  
  .status-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 25rpx;
    transform: translate(-50%, -50%) scale(0);
    animation: statusPulse 2s ease-out infinite;
  }
  
  @keyframes statusPulse {
    0% { transform: translate(-50%, -50%) scale(0); opacity: 1; }
    100% { transform: translate(-50%, -50%) scale(2); opacity: 0; }
  }
  
  /* 号码球体 - 全息效果 */
  .numbers-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10rpx;
  }
  
  .numbers-display {
    display: flex;
    align-items: center;
    gap: 20rpx;
    flex: 1;
  }
  
  .red-numbers, .blue-numbers {
    display: flex;
    gap: 15rpx;
  }
  
  .number-ball {
    width: 65rpx;
    height: 65rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    box-shadow: 
      0 0 20px currentColor,
      inset 0 -5px 20px rgba(236, 23, 23, 0.3);
    border: 2px solid;
    overflow: hidden;
    animation: float 3s ease-in-out infinite;
  }
  
  .number-ball.red {
    background: #e61111;
    border-color: var(--neon-red);
    color: var(--neon-red);
    animation-delay: calc(var(--i) * 0.1s);
  }
  
  .number-ball.blue {
    background: #5a9cff;
    border-color: var(--neon-blue);
    color: var(--neon-blue);
  }
  
  .number-ball.unknown {
    background: linear-gradient(45deg, #666, #999);
    border-color: #ccc;
    color: #ccc;
    animation: spin 2s linear infinite;
  }
  
  .ball-glow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: conic-gradient(
      from 0deg,
      transparent,
      rgba(255,255,255,0.8),
      transparent,
      rgba(255,255,255,0.8),
      transparent
    );
    border-radius: 50%;
    animation: spin 1s linear infinite;
    opacity: 0.6;
  }
  
  .number-text {
    font-size: 34rpx;
    font-weight: 700;
    color: white;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
    position: relative;
    z-index: 2;
    font-family: 'Courier New', monospace;
  }
  
  /* 历史链接 - 科技感按钮 */
  .history-link {
    display: flex;
    align-items: center;
    gap: 10rpx;
    padding: 18rpx 28rpx;
    background: linear-gradient(45deg, rgba(1, 29, 68, 0.8), rgba(10, 42, 92, 0.8));
    border-radius: 20rpx;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid rgba(58, 134, 255, 0.5);
    position: relative;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(58, 134, 255, 0.3);
    animation: glow 2s ease-in-out infinite;
  }
  
  .history-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }
  
  .history-link:active::before {
    left: 100%;
  }
  
  .history-link:active {
    transform: scale(0.95);
    box-shadow: 0 0 30px rgba(58, 134, 255, 0.6);
  }
  
  .link-text {
    font-size: 26rpx;
    color: #e2e8f0;
    font-weight: 500;
    text-shadow: 0 0 10px rgba(226, 232, 240, 0.5);
  }
  
  .arrow-icon {
    font-size: 22rpx;
    color: var(--accent-light);
    font-weight: bold;
    transition: transform 0.3s ease;
  }
  
  .history-link:active .arrow-icon {
    transform: translateX(5rpx);
  }
  
  /* 销售信息 - 数据面板风格 */
  .sales-info {
    margin-top: 30rpx;
  }
  
  .sales-card {
    background: rgba(1, 29, 68, 0.1);
    backdrop-filter: blur(20px);
    border-radius: 25rpx;
    padding: 0;
    border: 2px solid transparent;
    background-clip: padding-box;
    position: relative;
    overflow: hidden;
  }
  
  .sales-card::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #00ff00, #00ffff, #00ff00);
    border-radius: 27rpx;
    z-index: -1;
    animation: spin 4s linear infinite;
    background-size: 400% 400%;
  }
  
  .sales-grid {
    display: flex;
    height: 140rpx;
  }
  
  .sales-item {
    flex: 1;
    display: flex;
    align-items: center;
    padding: 0 35rpx;
    position: relative;
    overflow: hidden;
    border-right: 1px solid rgba(255,255,255,0.1);
  }
  
  .sales-item:last-child {
    border-right: none;
  }
  
  .sales-item.prize-pool {
    background: linear-gradient(45deg, rgba(255, 215, 0, 0.1), rgba(255, 158, 0, 0.1));
  }
  
  .sales-icon {
    font-size: 40rpx;
    margin-right: 25rpx;
    filter: drop-shadow(0 0 10px currentColor);
    animation: float 2s ease-in-out infinite;
  }
  
  .sales-content {
    display: flex;
    flex-direction: column;
  }
  
  .sales-label {
    font-size: 26rpx;
    color: #cbd5e0;
    font-weight: 400;
    margin-bottom: 10rpx;
    text-shadow: 0 0 5px rgba(203, 213, 224, 0.5);
  }
  
  .sales-value {
    font-size: 32rpx;
    font-weight: 700;
    background: linear-gradient(45deg, #ff6b6b, #ffd93d);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 15px rgba(255, 107, 107, 0.5);
    animation: pulse 1.5s ease-in-out infinite;
  }
  
  .sales-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3rpx;
    background: linear-gradient(90deg, transparent, #00ff00, transparent);
    animation: waveFlow 2s linear infinite;
  }
  
  @keyframes waveFlow {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
  
  /* 响应式设计 */
  @media (max-width: 375px) {
    .lottery-container {
      padding: 20rpx 15rpx;
    }
    
    .number-ball {
      width: 75rpx;
      height: 75rpx;
    }
    
    .numbers-display {
      gap: 15rpx;
    }
  }
  
  /* 加载动画 */
  .number-ball {
    animation: ballEntrance 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    opacity: 0;
    transform: scale(0) rotate(180deg);
  }
  
  @keyframes ballEntrance {
    0% {
      opacity: 0;
      transform: scale(0) rotate(180deg);
    }
    70% {
      transform: scale(1.2) rotate(-20deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }
  
  /* 为每个球设置延迟 */
  .number-ball:nth-child(1) { animation-delay: 0.1s; --i: 1; }
  .number-ball:nth-child(2) { animation-delay: 0.2s; --i: 2; }
  .number-ball:nth-child(3) { animation-delay: 0.3s; --i: 3; }
  .number-ball:nth-child(4) { animation-delay: 0.4s; --i: 4; }
  .number-ball:nth-child(5) { animation-delay: 0.5s; --i: 5; }
  .number-ball:nth-child(6) { animation-delay: 0.6s; --i: 6; }
  .number-ball.blue { animation-delay: 0.7s; }
  
  /* 悬停效果 */
  .number-ball:active {
    transform: scale(1.2) rotate(10deg);
    box-shadow: 0 0 30px currentColor;
  }
  
  .sales-item:active {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(0.98);
  }
  
  /* 粒子效果 */
  .particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  .particle {
    position: absolute;
    width: 4rpx;
    height: 4rpx;
    background: currentColor;
    border-radius: 50%;
    animation: particleFloat 6s ease-in-out infinite;
  }
  
  @keyframes particleFloat {
    0%, 100% {
      transform: translateY(0) translateX(0);
      opacity: 0;
    }
    10%, 90% {
      opacity: 1;
    }
    50% {
      transform: translateY(-100rpx) translateX(20rpx);
    }
  }