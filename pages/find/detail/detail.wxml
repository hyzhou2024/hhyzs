<import src="../../../templates/nodata.wxml" />
<view class="detail-container" wx:if="{{config.showLottery}}">
  <view class="detail-content">
    <view class="header">
      <view class="h-image">
        <image wx:if="{{luckType == 'lucklist'}}" mode="aspectFit" src="https://minidataservice.com/images/hongbao/main.jpg"></image>
        <view wx:if="{{luckType == 'ssqlist'}}">
          <view class="title">开奖号码</view>
          <view class="blueball" wx:if="{{activity.blue != null}}"><text>{{activity.blue}}</text></view>
          <view class="blueball" wx:else><text>?</text></view>
        </view>
      </view>
      <view class="h-txt">
        <view class="h-name">{{activity.description}}</view>
        <view class="h-desc">
          <view wx:if="{{luckType == 'lucklist'}}">奖池：{{activity.jiangchi}}红包券</view>
          <view wx:else>本期奖池：{{activity.prizepool}}红包券</view>
          <view class="h-desc-item">参与人数：{{activity.joinnum}}人</view>
        </view>
        <view wx:if="{{luckType == 'lucklist'}}" class="h-spor activity-num">活动编号：{{activity.issue}}</view>
        <view wx:else class="h-spor activity-num">
          <view>开奖期号：第{{activity.code}}期</view>

        </view>
        <view wx:if="{{luckType == 'ssqlist'}}" class="h-spor activity-num">截至时间：{{activity.deadline}}</view>

        <view class="h-spor" wx:if="{{luckType == 'lucklist'&&!activity.isopen}}">距离开奖时间还有：
          <countdown wx:if="{{isShowCount}}" lasttime='{{activity.opendate}}'></countdown>
        </view>
        <view class="h-spor" wx:if="{{activity.isopen}}">
          <view >【{{activity.opendate}}】已开奖</view>
        </view>
        <view class="h-spor" wx:if="{{luckType == 'ssqlist'&&!activity.status}}">距离开奖时间还有：
          <countdown wx:if="{{isShowCount}}" lasttime='{{activity.opentime}}'></countdown>
        </view>
        <view class="h-spor" wx:if="{{activity.status}}">
          <view >【第{{activity.code}}期】已开奖</view>
        </view>
      </view>
    </view>
    <view class="liconbox" wx:if="{{luckType == 'ssqlist'}}">
      <view class="lritem" wx:for="{{lucknav}}" wx:key="idx" wx:for-index="idx" wx:for-item="item" wx:if="{{item.type != 'contact'}}">
        <navigator wx:if="{{item.type == 'miniprogram'}}" class="iconbox_one" target="miniProgram" open-type="navigate" app-id="{{item.appid}}" path="{{item.path}}" version="release">
          <image src="{{item.iconurl}}" mode="widthFix" data-id="{{item}}"></image>
          <view data-id="{{item.name}}">{{item.name}}</view>
        </navigator>
        <navigator url="{{item.path}}" wx:if="{{item.type == 'navigation'}}">
          <image src="{{item.iconurl}}" mode="widthFix" data-id="{{item}}"></image>
          <view data-id="{{item.name}}">{{item.name}}</view>
        </navigator>
      </view>
    </view>
    <view class="join-content" wx:if="{{luckType == 'lucklist'}}">
      <view wx:if="{{_status==1}}">
        <view bindtap="attempJoin" class="join-btn" data-issue="{{activity.issue}}" wx:if="{{status==1}}">参加抽奖</view>
        <view class="join-btn" data-issues="{{activity.issues}}" wx:if="{{time == '开奖中...'&&status==1}}">活动已截止,开奖中</view>
        <view class="join-btn activity-end" wx:if="{{activity.isopen&&status==2}}">活动已结束,未参与抽奖</view>
      </view>
      <view wx:if="{{_status==2}}">
        <!-- <view class="queue-btn" wx:if="{{activity.ActivityLog.status==1}}">排队中...</view> -->
        <view class="queue-btn" wx:if="{{status==3}}">已参加抽奖,等待开奖</view>
        <!-- <view class="win-btn" wx:if="{{activity.ActivityLog.status==4||activity.ActivityLog.status==6||activity.ActivityLog.status==7}}">恭喜中奖了</view> -->
        <view class="win-btn" wx:if="{{status==4}}">恭喜您！获得{{a}}红包券</view>
      </view>
    </view>
    <!-- ssq -->
    <view class="hongbao" wx:if="{{config.showLottery&&luckType == 'ssqlist'}}">
      <view class="top"></view>
      <view bindtap="showSelectModal" class="{{show?'btn-open':'btn-open2'}}" wx:if="{{!activity.status}}">
        <text>参加</text>
      </view>
      <view  class="{{show?'btn-open':'btn-open2'}}" wx:else>
        <text style="font-size: 32rpx;">已开奖</text>
      </view>
      <view class="max_luck">第{{activity.code}}期</view>
      <view>
        <numscroll value="{{num}}" class="max_luck_jc" style="display: flex;justify-content: center;"></numscroll>
      </view>
      <view class="hongbo_bottom">

        <view class="avatar-list">
          <view wx:for="{{luckusers}}" wx:key="idx" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}" style='transform:translateX({{-idx*25}}rpx)'>
            <view>
              <view class="avatar-wrapper">
                <image class="avatar" src="{{item.avatar_url}}"></image>
              </view>
            </view>

          </view>


          <!-- 更多头像 -->
        </view>
        <view class="title2">共{{activity.joinnum}}人参与</view>
      </view>

    </view>
    <ad unit-id="adunit-e173d4215e67314d"></ad>
    <!-- <button class="btn" open-type="share">邀请好友组队</button> -->
    <view class="success-member" wx:if="{{luckType == 'lucklist'}}">
      <view class="sucess-title">中奖名单</view>
      <view class="success-item" wx:for="{{wins}}" wx:key="index">
        <view class="success-user">
          <image src="{{item.avatar_url}}"></image>
          <view class="success-user-name">{{item.nickname}}</view>
        </view>
        <view class="success-txt">获得{{item.final_gain}}红包券奖励</view>
      </view>
    </view>

    <button class="btn" open-type="share" wx:if="{{!activity.isopen}}">邀请好友组队</button>
    <view class="gift-content">
      <view class="gift-title">活动规则</view>
      <view class="gift-desc">
        <view class="gift-desc-item address-tip" wx:if="{{luckType == 'lucklist'}}">用户需要完成观看视频即可参与抽奖，参与者随机瓜分当期奖池，100%中奖，每30分钟一期，全天48期。中奖用户红包券直接发放到您的红包券余额，提现秒到账。</view>
      </view>
      <view class="gift-desc">
        <view class="gift-desc-item">{{activity.Des}}</view>
      </view>
      <view class="gift-title" wx:if="{{luckType == 'lucklist'}}">礼品描述</view>
      <view class="gift-desc" wx:if="{{activity.Type==2}}">
        <view class="gift-desc-item">{{activity.Gift.Name}}</view>
        <view class="gift-desc-item">{{activity.Gift.Des}}</view>
      </view>
      <view class="gift-image" wx:if="{{luckType == 'lucklist'}}">
        <image mode="widthFix" src="https://minidataservice.com/images/hongbao/main.jpg"></image>
      </view>
    </view>


  </view>
</view>
<view class="memberes-content" wx:if="{{showMember}}">
  <view class="members">
    <view class="member-title">
      <view class="member-title-txt">活动参与者</view>
      <image bindtap="btnHideMember" src="/images/close-member.png"></image>
    </view>
    <view class="member-list">
      <view class="member-list-item">
        <image src="{{item.AvatarUrl}}" wx:for="{{members}}" wx:key="{{item.ID}}"></image>
      </view>
    </view>
  </view>
</view>
<view class="show-win" wx:if="{{showWin}}">
  <view class="win-image">
    <image mode="aspectFit" src="/images/you-win.png"></image>
  </view>
  <view class="win-txt">
    <view>{{activity.ActivityLog.remark}}</view>
    <view bindtap="hideWin" class="comfirm-win">确定</view>
  </view>
</view>
<!-- 参加组件 -->
<view class="cu-modal {{showVIPModal?'show':''}}">
  <view class="cu-dialog" style="width:100%">
    <view class="cu-bar bg-gradual-green justify-end">
      <view class="content">双色球蓝球选号</view>
      <view bindtap="hideModal" class="action">
        <text class="cuIcon-close text-white"></text>
      </view>
    </view>
    <view class="padding-xl bg-white">
      <view class="select_text">参与{{activity.code}}期双色球蓝球竞猜，中奖者瓜分奖池红包券</view>
      <radio-group class='box' id="2" bindchange="checkChange">
        <label class="bitem" wx:for="{{bitems}}" wx:key="idx">
          <radio value="{{item.bvalue}}" name="{{item.bvalue}}" checked="{{item.blue_checked}}" hidden='true' />
          <label class="blueval {{item.blue_checked?'is_checked':''}}">{{item.bvalue}}</label>
        </label>
      </radio-group>
    </view>

    <view class="cu-bar bg-white">
      <view bindtap="clearAll" class="action margin-0 flex-sub ">清空</view>
      <view bindtap="attempJoin" class="action margin-0 flex-sub text-blue solid-left" data-issue="{{activity.code}}" data-lucktype="ssqlist"> 观看视频免费参与 </view>
    </view>
    <!-- <ad unit-id="adunit-178116156ea8557c" ad-type="video" ad-theme="white" bindload="adLoad" binderror="adError" bindclose="adClose" wx:if="{{showVIPModal}}"></ad> -->
  </view>
</view>
<!-- 数据不存在 -->
<view wx:if="{{nodata}}">
  <template is="nodata" />
</view>